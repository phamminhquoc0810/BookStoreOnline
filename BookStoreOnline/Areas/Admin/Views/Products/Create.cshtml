@model BookStoreOnline.Models.Product

@{
    ViewBag.Title = "Create";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

<h2>Thêm sách mới</h2>

@using (Html.BeginForm(("Create", "Products", FormMethod.Post, new { @enctype = "multipart/form-data" })))
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <h4>Product</h4>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="form-group">
            Tên sách
            <div class="col-md-10">
                @Html.EditorFor(model => model.ProductName, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.ProductName, "", new { @class = "text-danger" })
            </div>
        </div>
        <div class="form-group">
            Tác giả
            <div class="col-md-10">
                @Html.EditorFor(model => model.Author, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.Author, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            Giá
            <div class="col-md-10">
                @Html.EditorFor(model => model.Price, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.Price, "", new { @class = "text-danger" })
            </div>
        </div>
        <div class="form-group">
            Thể loại
            <div class="col-md-10">
                @Html.DropDownList("CategoryID", null, htmlAttributes: new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.CategoryID, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            Giới thiệu
            <div class="col-md-10">
                <textarea name="Introduce" placeholder="Giới thiệu về sách" class="form-control" rows="4"></textarea>
                @Html.ValidationMessageFor(model => model.Introduce, "", new { @class = "text-danger" })
            </div>
        </div>



        <div class="form-group">
            Hình ảnh
            <div class="col-md-10">
                <input type="file" name="imageBook" id=" imageBook" />
                @Html.ValidationMessageFor(model => model.ImageProd, "", new { @class = "text-danger" })
            </div>
        </div>



        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Thêm" class="btn btn-success" />
            </div>
        </div>
    </div>
}
<!--style="padding: 5px 15px 5px 15px; font-size: small;"-->
<div>
    @Html.ActionLink("Quay lại", "Index")
</div>
<style>
    .col-md-10 {
        float: none;
    }

    .form-group .col-md-offset-2.col-md-10 {
        margin-left: 0px;
    }

    .btn-success {
        padding: 5px 15px 5px 15px;
        font-size: small;
    }

    .col-md-10 .form-control {
        font-size: medium;
    }

    select.form-control:not([size]):not([multiple]) {
        height: calc(3.25rem + 5px);
        font-size: medium;
    }
</style>