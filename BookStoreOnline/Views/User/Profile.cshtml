@model BookStoreOnline.Models.User
@{
    ViewBag.Title = "Profile";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2 style="text-align:center">Profile</h2>

@if (Model != null)
{
    <div class="thongtin">
        <p><strong>User ID:</strong> @Model.UserID</p>
        <p><strong>User Name:</strong> @Model.UserName</p>
        <p><strong>Email:</strong> @Model.Email</p>
    </div>

    <div>
        @Html.ActionLink("Change Password", "ChangePassword", "User", null, new { @class = "btn btn-primary" })
    </div>
    
}



<style>
    .thongtin {
        margin-left: 300px;
        width: 50%;
    }

    .btn-primary {
        margin-left: 300px;
    }
</style>
