@model BookStoreOnline.Models.User

@{
    ViewBag.Title = "Change Password";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2 style="text-align:center">Change Password</h2>

@using (Html.BeginForm("ChangePassword", "User", FormMethod.Post))
{
    @Html.AntiForgeryToken()

    <div class="form-group">
        @Html.Label("Old Password", htmlAttributes: new { @class = "control-label" })
        @Html.Password("oldPassword", null, new { @class = "form-control" })
    </div>

    <div class="form-group">
        @Html.Label("New Password", htmlAttributes: new { @class = "control-label" })
        @Html.Password("newPassword", null, new { @class = "form-control" })
    </div>

    <div class="form-group">
        @Html.Label("Confirm Password", htmlAttributes: new { @class = "control-label" })
        @Html.Password("confirmNewPassword", null, new { @class = "form-control" })
    </div>

    <button type="submit" class="btn btn-primary">Change Password</button>
    if (ViewBag.ChangePasswordSuccess != null)
    {
        <p class="text-success">@ViewBag.ChangePasswordSuccess</p>
    }
    if (ViewBag.ChangePasswordError != null)
    {
        <p class="text-danger">@ViewBag.ChangePasswordError</p>
    }

}

<style>
    .form-group {
        width: 20%;
        margin-left: 350px;
    }

    .btn-primary {
        margin-left: 350px;
    }
</style>
